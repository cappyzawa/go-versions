package main

import (
	"flag"
	"fmt"
	"io"
  "os"

	"github.com/cappyzawa/go-versions"
)

const (
	statusOK = iota
	statusVersionsErr
	statusNoVersionsErr
)

var (
	os   string
	arch string
)

type cli struct {
	err    io.Writer
	out    io.Writer
	client versions.Client
}

func (c *cli) Run(args []string) int {
	flags := flag.NewFlagSet(args[0], flag.ContinueOnError)
	flags.StringVar(&os, "os", "", "select os")
	flags.StringVar(&arch, "arch", "", "select arch")

	versions, err := c.client.List()
	if err != nil {
		fmt.Fprintf(c.err, "failed to get go versions: %v\n", err)
		return statusVersionsErr
	}
	if len(versions) == 0 {
		fmt.Fprintf(c.err, "there is no go versions\n")
		return statusNoVersionsErr
	}
	for _, v := range versions {
		fmt.Fprintf(c.out, "%s\n", v)
	}
	return statusOK
}

func main() {
	c := &cli{
		out:    os.Stdout,
		err:    os.Stderr,
		client: versions.NewClient(&versions.Config{}),
	}
	os.Exit(c.Run(os.Args))
}
